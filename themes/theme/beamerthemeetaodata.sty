\mode<presentation>

\newif\ifbeamer@secheader
\beamer@secheaderfalse

\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
\ProcessOptionsBeamer


\useoutertheme{etaodata}

\setbeamertemplate{background}
 {\includegraphics[width=\paperwidth,height=\paperheight]{slide-bg}}

\RequirePackage{tikz}

\addtobeamertemplate{title page}{\vspace{3\baselineskip}}{}

\addtobeamertemplate{title page}{
    \begin{tikzpicture}[remember picture,overlay]
        \node [xshift=0cm,yshift=0cm] at (current page.center) {
            \includegraphics[width=\paperwidth, height=\paperheight]{frontpage-bg}
        };
%        \node [xshift=0cm,yshift=0cm] at (0.1\paperwidth,-0.78\paperheight) {
%            \includegraphics[width=3cm]{etao-data}
%        };
    \end{tikzpicture}
}{}


% color definitions
\definecolor{uipaleblue}{RGB}{96,123,139}
\definecolor{uipoppy}{RGB}{225,64,0}

% set the title color
\setbeamercolor{title}{fg=uipaleblue}

% set colors for specific elements
\setbeamercolor{block}{fg=uipoppy}
\setbeamercolor{block title}{fg=uipoppy} % adjust title color to poppy
\setbeamercolor{block item}{fg=uipoppy}
\setbeamercolor{itemize item}{fg=uipoppy} % adjusts the bullet color

% frame title styling
\setbeamertemplate{frametitle}{\vspace{0.4cm} \color{white}  \insertframetitle}

\usesubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\blacktriangleright$}%
}
\usesubsubitemizeitemtemplate{%
    \tiny\raise1.5pt\hbox{\color{beamerstructure}$\bigstar$}%
}


\setbeamersize{text margin left=1em,text margin right=1em}
\setbeamersize{frametitle=\huge}

\ifbeamer@secheader\else\setbeamertemplate{headline}[default]\fi

\mode
<all>
